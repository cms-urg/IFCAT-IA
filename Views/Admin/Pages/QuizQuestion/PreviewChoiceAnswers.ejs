<div class="modal fade" id="choice-answers-preview" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Choices Preview</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="choice-answers-preview-text"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showChoiceAnswersPreview(className) {
        $("#choice-answers-preview").modal();

        let text = "";

        $.each($(className), function(key, element) {
            if($(element).is(':visible')) {
                text += "<div>" + $(element).val() + "<hr/></div>";
            }
        })

        $("#choice-answers-preview-text").html(text);

        renderMathInElement(document.getElementById('choice-answers-preview-text'), {
            delimiters: [
                {left: "$$", right: "$$", display: true},
                {left: "$", right: "$", display: false}
            ]
        });
    }
</script>