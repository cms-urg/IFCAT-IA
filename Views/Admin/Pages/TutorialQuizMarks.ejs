<% include ../Partials/Header.ejs %>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‚Äê <%- course.code %></li>
    <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Tutorials &amp; Quizzes</a></li>
    <li class="active">Marks</li>
</ol>

<h3><%- title %></h3>

<div class="nav-actions">
    <a class="btn btn-default btn-sm" href="/admin/courses/<%= course.id %>/tutorials-quizzes/<%= tutorialQuiz._id %>/marks?export=true"><span class="glyphicon glyphicon-save"></span> Export</a>
</div>

<table class="table table-hover table-nofluid">
    <thead>
        <tr>
            <th>UTORid</th>
            <th class="text-center">Group</th>
            <th class="text-center">Mark</th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(data)) { %>
        <tr><td colspan="8">No students have been added yet.</td></tr>
    <% } else { %>
        <% _.each(data, row => { %>
            <tr>
                <td><%= row.member.getUsername() %></td>
                <td><%= row.group.name %></td>
                <td><%= row.score %></td>
                <td class="actions">
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">Actions</button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.getId() %>/tutorials-quizzes/<%= tutorialQuiz._id %>/groups/<%= row.group._id %>/responses">View Group Responses</a></li>
                            <li><a href="/admin/courses/<%= course.getId() %>/students/<%= row.member.getId() %>/marks">View Student Marks</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<% include ../Partials/Footer.ejs %>