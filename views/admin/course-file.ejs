<%- include ../partials/admin-header -%>

<h1><%= fil3.isNew ? 'Add new file' : 'Edit file' %></h1>

<form action="/admin/courses/<%= course.id %>/files/<%= fil3.isNew ? '' : fil3.id + '?_method=put' %>" 
    method="post" enctype="multipart/form-data" class="form-horizontal">
    
    <div class="form-group">
        <label class="col-sm-2 control-label">Upload File</label>
        <div class="col-sm-10">
            <label class="btn btn-default">
                <input type="file" name="file" style="display:none;">Browse
            </label>
            <span class="label label-info"></span>
        </div>
    </div>

    <% if (!fil3.isNew) { %>

        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
                <input type="text" value="<%= fil3.name %>" readonly disabled class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Type</label>
            <div class="col-sm-4">
                <input type="text" value="<%= fil3.type %>" readonly disabled class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Preview</label>
            <div class="col-sm-4">
            <% if (fil3.type.indexOf('image') !== -1) { %>
                <img src="/upl/<%= course.id %>/<%= fil3.name %>" alt="<%= fil3.name %>" class="img-responsive img-thumbnail">
            <% } else if (fil3.type.indexOf('audio') !== -1) { %>
                <audio controls>
                    <source src="/upl/<%= course.id %>/<%= fil3.name %>" type="<%= fil3.type %>">
                </audio>
            <% } else { %>
                <a href="/upl/<%= course.id %>/<%= fil3.name %>" target="_blank" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-link"></span>Link</a>
            <% } %>
            </div>
        </div>

    <% } %>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/files" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<%- include ../partials/admin-footer -%>