<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Instructors</small></h1>

<!-- Show current instructors -->

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (!_.isEmpty(course.instructors)) { %>
        <% for (var i = 0, len = course.instructors.length; i < len; i++) { %>
            <tr>
                <td><%= course.instructors[i].name.full %></td>
                <td><%= course.instructors[i].local.email %></td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm btn-delete-user"
                        data-url="/admin/courses/<%= course.id %>/instructors/<%= course.instructors[i].id %>">Delete</button>
                </td>
            </tr>
        <% } %>
    <% } else { %>
        <tr><td colspan="3">No instructors have been added to the course yet.</td></tr>
    <% } %>
    </tbody>
</table>

<!-- Search instructors -->

<h1><small>Find instructors</small></h1>

<form id="form-search-user" action="/admin/courses/<%= course.id %>/instructors/search" method="get">
    <div class="form-group">
        <label class="col-md-3 control-label">Enter name (or leave blank)</label>
        <div class="col-md-4">
            <div class="row">
                <div class="col-xs-10">
                    <input type="text" name="q" value="" class="form-control input-sm">
                </div>
                <div class="col-xs-2">
                    <input type="submit" value="Go" class="btn btn-default btn-sm">
                </div>
            </div>
        </div>
    </div>
</form>

<div id="search-user-results"></div>

<%- include ./footer -%>