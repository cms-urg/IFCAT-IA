<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Instructors</small></h1>

<%- include ./messages %>

<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find">
    <span class="glyphicon glyphicon-search"></span> Find instructors</button>

<!-- Current instructors -->

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th style="width: 75px"></th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(course.instructors)) { %>
        <tr>
            <td colspan="3">No instructors have been added to the course yet. Click <a 
                href="#" data-toggle="modal" data-target="#modal-find">here</a> to add instructors to the course.</td>
        </tr>
    <% } else { %>
        <% _.each(course.instructors, function (instructor) { %>
            <tr>
                <td><%= instructor.name.full %></td>
                <td><%= instructor.local.email %></td>
                <td><a href="/admin/courses/<%= course.id %>/instructors/<%= instructor.id %>"
                        class="btn btn-danger btn-sm btn-delete-user">Delete</a></td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./modals/find-instructors %>
<%- include ./body-js -%>
<%- include ./footer -%>