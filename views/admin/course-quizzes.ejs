<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Quizzes</small></h1>

<a href="/admin/courses/<%= course.id %>/quizzes/new" class="btn btn-default btn-sm"><span 
    class="glyphicon glyphicon-plus"></span> Add New Quiz</a>

<table class="table table-striped sortable">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-center"># of questions</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (!_.isEmpty(course.quizzes)) { %>
        <% _.each(course.quizzes, function (quiz) { %>
            <tr>
                <td><%= quiz.name %></td>
                <td class="text-center"><%= quiz.questions.length %></td>
                <td></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/edit"><span 
                                class="glyphicon glyphicon-pencil"></span> Edit Quiz</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions"><span 
                                class="glyphicon glyphicon-question-sign"></span> Manage Questions</a></li>
                            <li class="divider"></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>" 
                                class="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete Quiz</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr><td colspan="4">No quizzes have been added yet.</td></tr>
    <% } %>
    </tbody>
</table>

<script type="text/template" id="btn-delete-message-template">
    <p>You are about to delete quiz and all of its associated information.</p>
    <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>    
</script>

<%- include ./footer -%>