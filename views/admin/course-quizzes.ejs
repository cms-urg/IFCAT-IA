<%- include ./header -%>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‚Äê <%= course.code %></li>
    <li class="active">Quizzes</li>
</ol>

<h1><%- title %></h1>

<%- include ./flash %>

<div class="nav-actions">
    <a href="/admin/courses/<%= course.id %>/quizzes/new" class="btn btn-default btn-sm"><span 
        class="glyphicon glyphicon-plus"></span> Add New Quiz</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-center"># of questions</th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(course.quizzes)) { %>
        <tr><td colspan="3">No quizzes have been added yet.</td></tr>
    <% } else { %>
        <% _.each(course.quizzes, function (quiz) { %>
            <tr>
                <td><%= quiz.name %></td>
                <td class="text-center"><%= quiz.questions.length %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/edit"><span 
                                class="glyphicon glyphicon-pencil"></span> Edit Quiz</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/copy"
                                class="btn-copy"><span class="glyphicon glyphicon-duplicate"></span> Copy Quiz</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions"><span 
                                class="glyphicon glyphicon-question-sign"></span> Manage Questions</a></li>
                            <li class="divider"></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>" 
                                class="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete Quiz</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./body-js -%>

<script>
$(function () {
    $('.btn-copy').click(function (e) {
        e.preventDefault();
        $.post(this.href, function () { window.location.reload(true); });
    });

    $('.btn-delete').click(function (e) {
        e.preventDefault();
        var btn = this;
        $.deletebox({
            title: 'Delete quiz',
            message: '<p>You are about to delete quiz and all of its associated information.</p>\
                <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>',
            callback: function () {
                $.delete(btn.href, function () { window.location.reload(true) });
            }
        });
    });
});
</script>

<%- include ./footer -%>