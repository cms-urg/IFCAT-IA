<%- include ./header -%>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‐ <%= course.code %></li>
    <li class="active">Students</li>
</ol>

<h1><%- title %></h1>

<%- include ./flash %>

<form action="/admin/courses/<%= course.id %>/students?_method=put" method="post">
    <div class="nav-actions">
        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-import-students">
            <span class="glyphicon glyphicon-save"></span> Import students</button>
        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find-users">
            <span class="glyphicon glyphicon-search"></span> Find students</button>
        <button type="submit" class="btn btn-primary btn-sm" id="btn-update">
            <span class="glyphicon glyphicon-ok"></span> Update tutorials</button>
        <button type="button" class="btn btn-danger btn-sm" id="btn-delete">
            <span class="glyphicon glyphicon-remove"></span> Delete students</button>
    </div>
    <table class="table table-striped stretch">
        <thead>
            <tr>
                <th style="width: 10px;"><input type="checkbox" value="1"></th>
                <th>Name</th>
                <th>UTORid</th>
                <th>Student No.</th>
                <th>Tutorials</th>
            </tr>
        </thead>
        <tbody>
        <% if (_.isEmpty(students)) { %>
            <tr><td colspan="5">No students have been added to the course yet.</td></tr>
        <% } else { %>
            <% _.each(students, function (student) { %>
                <tr>
                    <td><input type="checkbox" name="students[]" value="<%= student.id %>"></td>
                    <td><%= student.name.full %></td>
                    <td><%= student.student.UTORid %></td>
                    <td><%= student.student.number %></td>
                    <td>
                    <% _.each(course.tutorials, function (tutorial) { %>
                        <input type="checkbox" 
                            name="tutorials[<%= tutorial.id %>][<%= student.id %>]" value="1" 
                            data-label="<%= tutorial.number %>" 
                            data-group="<%= student.id %>"<%= tutorial.hasStudent(student.id) ? ' checked' : '' %>>
                    <% }) %>
                    </td>
                </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>
</form>

<%- include ./modals/import-students -%>
<%- include ./modals/find-students -%>
<%- include ./footer %>