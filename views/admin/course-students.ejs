<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Students</small></h1>

<%- include ./messages %>

<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-import-students">
    <span class="glyphicon glyphicon-save"></span> Import students</button>

<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find">
    <span class="glyphicon glyphicon-search"></span> Find students</button>

<!-- Show current student. -->

<table class="table table-striped">
    <thead>
        <tr>
            <th rowspan="2">UTORid</th>
            <th rowspan="2">Name</th>
            <% if (!_.isEmpty(course.tutorials)) { %>
                <th colspan="<%= course.tutorials.length %>" class="text-center">Tutorials</th>
            <% } %>
            <th rowspan="2"></th>
        </tr>
        <tr>
        <% _.each(course.tutorials, function (tutorial) { %>
            <th class="text-center"><%= tutorial.number %></th>
        <% }) %>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(course.students)) { %>
        <tr>
            <td colspan="<%= 3 + course.tutorials.length %>">
                No students have been added to the course yet. Click <a 
                href="#" data-toggle="modal" data-target="#modal-find">here</a> to add students to the course.
            </td>
        </tr>
    <% } else { %>
        <% _.each(course.students, function (student) { %>
            <tr>
                <td><%= student.UTORid %></td>
                <td><%= student.name.full %></td>
                <% _.each(course.tutorials, function (tutorial) { %>
                    <td class="text-center"><input type="radio" name="tutorial[<%= student.id %>]" 
                        value="<%= tutorial.id %>"<%= tutorial.hasStudent(student.id) ? ' checked' : '' %>></td>
                <% }) %>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                        <% if (!_.isEmpty(course.tutorials)) { %>
                            <li><a href="/admin/courses/<%= course.id %>/students/<%= student.id %>" 
                                class="btn-update-user">Update tutorial</a></li>
                            <li class="divider">
                        <% } %>
                            <li><a href="/admin/courses/<%= course.id %>/students/<%= student.id %>" 
                                class="btn-delete-user">Remove from course</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./modals/import-students %>
<%- include ./modals/find-students %>
<%- include ./body-js %>
<%- include ./footer %>