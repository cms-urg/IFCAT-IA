<%- include ../partials/admin-header -%>

<h1>Students</h1>

<h4 class="todo">@TODO: ability to import students</h4>
<h4 class="todo">@TODO: ability to delete students</h4>

<a class="btn btn-default btn-sm" href="#" data-toggle="modal" data-target="#import-modal">Import students</a>

<form action="/courses/<%= course.id %>/tutorials/students/" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" value="1"></th>
                <th>UTORid</th>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
                <th>Tutorial</th>
            </tr>
        </thead>
        <tbody>
        <% course.students.forEach(function (student) { %>
            <tr>
                <td><input type="checkbox" value="<%= student.id %>"></td>
                <td><%= student.UTORid %></td>
                <td><%= student.name.first %></td>
                <td><%= student.name.last %></td>
                <td><%= student.local.email %></td>
                <td><%= student.tut %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</form>

