<%- include ./header -%>

<h1>Students</h1>
<h4 class="todo">@TODO: ability to delete students</h4>

<a class="btn btn-default btn-sm" href="#" data-toggle="modal" data-target="#import-modal">Import students</a>

<!-- Show current students -->

<table class="table table-striped">
    <thead>
        <tr>
            <th rowspan="2">First Name</th>
            <th rowspan="2">Last Name</th>
            <th rowspan="2">Email</th>
            <th colspan="<%= course.tutorials.length %>" class="text-center">Tutorials</th>
            <th rowspan="2"></th>
        </tr>
        <tr>
        <% course.tutorials.forEach(function (tutorial) { %>
            <th class="text-center"><%= tutorial.number %></th>
        <% }) %>
        </tr>
    </thead>
    <tbody>
    <% course.students.forEach(function (student) { %>
        <tr>
            <td><%= student.name.first %></td>
            <td><%= student.name.last %></td>
            <td><%= student.local.email %></td>
            <% course.tutorials.forEach(function (tutorial) { %>
                <td class="text-center"><input type="radio" name="tutorial[<%= student.id %>]" value="<%= tutorial.id %>"<%= 
                    tutorial.students.indexOf(student.id) !== -1 ? ' checked' : '' %>></td>
            <% }) %>
            <td>
                <button type="button" class="btn btn-default btn-sm btn-update-user"
                    data-url="/admin/courses/<%= course.id %>/students/<%= student.id %>">Update tutorial</button>
                <button type="button" class="btn btn-danger btn-sm btn-delete-user"
                    data-url="/admin/courses/<%= course.id %>/students/<%= student.id %>">Delete from course</button>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<!-- Search students -->

<h1>Find students</h1>

<form id="search-user-form" action="/admin/courses/<%= course.id %>/students/search" method="get">
    <div class="form-group">
        <label class="col-md-3 control-label">Enter name (or leave blank)</label>
        <div class="col-md-4">
            <div class="row">
                <div class="col-xs-10">
                    <input type="text" name="q" value="" class="form-control input-sm">
                </div>
                <div class="col-xs-2">
                    <input type="submit" value="Go" class="btn btn-default btn-sm">
                </div>
            </div>
        </div>
    </div>
</form>

<div id="search-user-results"></div>

<div class="modal fade" id="import-modal" role="dialog">
    <form action="/admin/courses/<%= course.id %>/students/import" 
        method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Import students</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Upload file</label>
                        <div class="col-sm-10">
                            <label class="btn btn-default">
                                <input type="file" name="file" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" style="display:none;">Browse
                            </label>
                            <span class="label label-info"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
    </form>
</div>

<%- include ./footer -%>