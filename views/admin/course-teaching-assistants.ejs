<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Teaching assistants</small></h1>

<%- include ./messages %>

<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find">
    <span class="glyphicon glyphicon-search"></span> Find teaching assistants</button>

<!-- Show current TAs -->

<table class="table table-striped">
    <thead>
        <tr>
            <th rowspan="2">Name</th>
            <th rowspan="2">Email</th>
            <% if (!_.isEmpty(course.tutorials)) { %>
                <th colspan="<%= course.tutorials.length %>" class="text-center">Tutorials</th>
            <% } %>
            <th rowspan="2"></th>
        </tr>
        <tr>
        <% _.each(course.tutorials, function (tutorial) { %>
            <th class="text-center"><%= tutorial.number %></th>
        <% }) %>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(course.teachingAssistants)) { %>
        <tr>
            <td colspan="<%= 3 + course.tutorials.length %>">
                No teaching assistants have been added to the course yet. Click <a 
                href="#" data-toggle="modal" data-target="#modal-find">here</a> to add teaching assistants to the course.
            </td>
        </tr>
    <% } else { %>
        <% _.each(course.teachingAssistants, function (teachingAssistant) { %>
            <tr>
                <td><%= teachingAssistant.name.full %></td>
                <td><%= teachingAssistant.local.email %></td>
                <% _.each(course.tutorials, function (tutorial) { %>
                    <td class="text-center"><input type="checkbox" name="tutorials[]" value="<%= tutorial.id %>"<%= 
                        tutorial.hasTeachingAssistant(teachingAssistant.id) ? ' checked' : '' %>></td>
                <% }) %>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                        <% if (!_.isEmpty(course.tutorials)) { %>
                            <li><a href="/admin/courses/<%= course.id %>/teaching-assistants/<%= teachingAssistant.id %>" 
                                class="btn-update-user">Update tutorials</a></li>
                        <% } %>
                            <li><a href="/admin/courses/<%= course.id %>/teaching-assistants/<%= teachingAssistant.id %>"
                                class="btn-delete-user">Remove from course</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./modals/find-teaching-assistants %>
<%- include ./body-js -%>
<%- include ./footer -%>