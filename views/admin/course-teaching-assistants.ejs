<%- include ./header -%>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‚Äê <%= course.code %></li>
    <li class="active">Teaching Assistants</li>
</ol>

<h1><%- title %></h1>

<%- include ./flash %>

<form action="/admin/courses/<%= course.id %>/teaching-assistants?_method=put" method="post">
    <div class="nav-actions">
        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find-users">
            <span class="glyphicon glyphicon-search"></span> Find teaching assistants</button>
        <button type="submit" class="btn btn-primary btn-sm" id="btn-update">
            <span class="glyphicon glyphicon-ok"></span> Update tutorials</button>
        <button type="button" class="btn btn-danger btn-sm" id="btn-delete">
            <span class="glyphicon glyphicon-remove"></span> Delete teaching assistants</button>
    </div>
    <div class="stretch">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px;"><input type="checkbox" value="1"></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Tutorials</th>
                </tr>
            </thead>
            <tbody>
            <% if (_.isEmpty(course.teachingAssistants)) { %>
                <tr><td colspan="4">No teaching assistants have been added to the course yet.</td></tr>
            <% } else { %>
                <% _.each(course.teachingAssistants, function (assistant) { %>
                    <tr>
                        <td><input type="checkbox" name="teachingAssistants[]" value="<%= assistant.id %>"></td>
                        <td><%= assistant.name.full %></td>
                        <td><%= assistant.local.email %></td>
                        <td>
                        <% _.each(course.tutorials, function (tutorial) { %>
                            <input type="checkbox" 
                                name="tutorials[<%= tutorial.id %>][<%= assistant.id %>]" 
                                value="1" data-label="<%= tutorial.number %>"<%= 
                                tutorial.hasTeachingAssistant(assistant.id) ? ' checked' : '' %>>
                        <% }) %>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
            </tbody>
        </table>
    </div>
</form>

<%- include ./modals/find-teaching-assistants %>
<%- include ./footer -%>