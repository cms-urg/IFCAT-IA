<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><h1>
<h3><%= tutorial.isNew ? 'Add new tutorial' : 'Edit tutorial' %></h3>

<%- include ./messages %>

<form action="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.isNew ? '' : tutorial.id + '?_method=put' %>" 
    method="post" class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Number</label>
        <div class="col-sm-10">
            <input type="text" name="number" value="<%= tutorial.number %>" class="form-control" maxlength="4" placeholder="e.g. 0001 or 1">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/tutorials" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<h3>Add multiple tutorials</h3>

<form action="/admin/courses/<%= course.id %>/tutorials" method="post">

    <div class="form-inline">
        <label class="control-label">Add</label>
        <input type="number" name="number" value="<%= tutorial.number %>" min="1" class="form-control" 
            style="margin: 0 10px; width: 70px">
        <label class="control-label">tutorials starting from</label>
        <input type="number" name="number" value="<%= tutorial.number %>" min="1" class="form-control" maxlength="4" 
            style="margin: 0 10px; width: 70px">
        <button type="submit" class="btn btn-primary btn-sm">Go</button>
    </div>

</form>

<%- include ./body-js -%>
<%- include ./footer -%>