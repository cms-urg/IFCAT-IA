<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br>
<small><%= tutorial.isNew ? 'Add new tutorial' : 'Edit tutorial' %></small></h1>

<%- include ./messages %>

<form action="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.isNew ? '' : tutorial.id + '?_method=put' %>" 
    method="post" class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Number</label>
        <div class="col-sm-10">
            <input type="text" name="number" value="<%= tutorial.number %>" class="form-control" maxlength="4" placeholder="e.g. 0001 or 1">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/tutorials" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<%- include ./footer -%>