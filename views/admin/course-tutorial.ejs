<%- include ../partials/admin-header -%>


<h1><%= tutorial.isNew ? 'Add new tutorial' : 'Edit tutorial' %></h1>

<form action="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.isNew ? '' : tutorial.id + '?_method=put' %>" 
    method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Number</label>
        <div class="col-sm-10">
            <input type="text" name="number" value="<%= tutorial.number %>" class="form-control" maxlength="4">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/tutorials" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>
</form>

<%- include ../partials/admin-footer -%>