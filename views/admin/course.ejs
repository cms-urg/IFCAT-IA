<%- include ./header -%>

<h1><%= course.isNew ? 'Add new course' : 'Edit course' %></h1>

<%- include ./flash %>

<form action="/admin/courses/<%= course.isNew  ? '' : course.id + '?_method=put' %>" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Code</label>
        <div class="col-sm-10">
            <input type="text" name="code" value="<%= course.code %>" class="form-control" 
                maxlength="8" placeholder="e.g. CSCA48H1">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" name="name" value="<%= course.name %>" class="form-control" 
                maxlength="50" placeholder="e.g. Introduction to Computer Science">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>
</form>

<%- include ./body-js -%>
<%- include ./footer -%>