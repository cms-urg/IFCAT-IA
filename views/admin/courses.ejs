<%- include ./header -%>

<h1>Courses</h1>

<%- include ./messages %>

<a href="/admin/courses/new" class="btn btn-default btn-sm"><span 
    class="glyphicon glyphicon-plus"></span> Add New Course</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Instructors</th>
            <th>Tutorials (TAs)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (!_.isEmpty(courses)) { %>
        <% _.each(courses, function (course) { %>
            <tr>
                <td><%= course.code %></td>
                <td><%= course.name %></td>
                <td>
                <% _.each(course.instructors, function (instructor) { %>
                    <div><%= instructor.name.full %></div>
                <% }) %>
                </td>
                <td class="tutorial">
                <% _.each(course.tutorials, function (tutorial) { %>
                    <div>
                        <span class="number"><%= 'TUT ' + tutorial.number %></span>
                    <% if (tutorial.teachingAssistants.length) { %>
                        <span class="teaching-assistants"><%=  
                            '(' + _.map(tutorial.teachingAssistants, function (teachingAssistant) { 
                                return teachingAssistant.name.full; 
                            }).join(', ') + ')'
                        %></span>
                    <% } %>
                    </div>
                <% }) %>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/edit"><span 
                                class="glyphicon glyphicon-pencil"></span> Edit Course</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/tutorials"><span 
                                class="glyphicon glyphicon-blackboard"></span> Manage Tutorials</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes"><span 
                                class="glyphicon glyphicon-list-alt"></span> Manage Quizzes</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/files"><span 
                                class="glyphicon glyphicon-picture"></span> Manage Files</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/instructors"><span 
                                class="glyphicon glyphicon-user"></span> Manage Instructors</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/teaching-assistants"><span 
                                class="glyphicon glyphicon-user"></span> Manage Teaching Assistants</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/students"><span 
                                class="glyphicon glyphicon-user"></span> Manage Students</a></li>
                            <li class="divider"></li>
                            <li><a href="/admin/courses/<%= course.id %>" class="btn-delete"><span 
                                class="glyphicon glyphicon-remove"></span> Delete Course</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr><td colspan="5"> No courses have been added yet.</td></tr>
    <% } %>
    </tbody>
</table>

<script type="text/template" id="btn-delete-message-template">
    <p>You are about to delete course and all of its associated information.</p>
    <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>  
</script>

<%- include ./footer -%>