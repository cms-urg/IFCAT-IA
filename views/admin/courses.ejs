<%- include ./header -%>

<h1>Courses</h1>

<a href="/admin/courses/new" class="btn btn-default btn-sm"><span 
    class="glyphicon glyphicon-plus"></span> Add New Course</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Instructors</th>
            <th>Tutorials (TA)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (!_.isEmpty(courses)) { %>
        <% for (var i = 0, len = courses.length; i < len; i++) { %>
            <tr>
                <td><%= courses[i].code %></td>
                <td><%= courses[i].name %></td>
                <td>
                <% courses[i].instructors.forEach(function (instructor) { %>
                    <div><%= instructor.name.full %></div>
                <% }) %>
                </td>
                <td class="tutorial">
                <% courses[i].tutorials.forEach(function (tutorial) { %>
                    <div>
                        <span class="number"><%= 'TUT ' + tutorial.number %></span>
                    <% if (tutorial.teachingAssistants.length) { %>
                        <span class="teaching-assistants"><%=  
                            '(' + tutorial.teachingAssistants.map(function (teachingAssistant) { 
                                return teachingAssistant.name.full; 
                            }).join(', ') + ')'
                        %></span>
                    <% } %>
                    </div>
                <% }) %>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= courses[i].id %>/edit"><span 
                                class="glyphicon glyphicon-pencil"></span> Edit Course</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/tutorials">Manage Tutorials</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/quizzes">Manage Quizzes</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/files"><span 
                                class="glyphicon glyphicon-file"></span> Manage Files</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/instructors">Manage Instructors</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/teaching-assistants">Manage Teaching Assistants</a></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>/students">Manage Students</a></li>
                            <li class="divider"></li>
                            <li><a href="/admin/courses/<%= courses[i].id %>" class="btn-delete"><span 
                                class="glyphicon glyphicon-remove"></span> Delete Course</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% } %>
    <% } else { %>
        <tr><td colspan="5">No courses have been added yet.</td></tr>
    <% } %>
    </tbody>
</table>

<script type="text/template" id="btn-delete-message-template">
    <p>You are about to delete course and all of its associated information.</p>
    <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>  
</script>

<%- include ./footer -%>