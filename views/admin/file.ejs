<%- include ../partials/admin-header -%>

<h1><%= file.isNew ? 'Add new file' : 'Edit file' %></h1>

<form action="/admin/courses/<%= course.id %>/files/<%= file.isNew ? '' : file.id + '?_method=put' %>" 
    method="post" enctype="multipart/form-data" class="form-horizontal">
    <div class="form-group">
        <label for="number" class="col-sm-2 control-label">Upload File</label>
        <div class="col-sm-10">
            <label class="btn btn-default">
                <input type="file" name="file" style="display:none;">Browse
            </label>
            <span class="label label-info"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/files" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>
</form>

<%- include ../partials/admin-footer -%>