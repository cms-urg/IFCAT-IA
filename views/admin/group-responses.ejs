<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br>
<small>Tutorial <%= tutorialQuiz.tutorial.number %> - <%= tutorialQuiz.quiz.name %> - Group <%= group.name %> - Responses</h1>

<%- include ./messages %>

<a href="/admin/courses/<%= course.id %>/tutorial-quizzes/<%= tutorialQuiz.id %>/groups/<%= group.id %>/responses/export" class="btn btn-default"><span class="glyphicon glyphicon-save"></span> Export</a>

<br><br>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 10px;">No.</th>
            <th style="max-width: 250px;">Question</th>
            <th class="text-center"># of incorrect attempts</th>
            <th class="text-center">Points awarded</th>
        </tr>
    </thead>
    <% if (!_.isEmpty(responses)) { %>
        <tfoot>
            <tr class="total-points">
                <th colspan="3" style="text-align: right">Total Points</th>
                <th class="text-center"><%= totalPoints %></th>
            </tr>
        </tfoot>
        <tbody>
        <% _.each(responses, function (response) { %>
            <tr>
                <td style="width: 10px;"><%= response.question.number %>.</td>
                <td style="max-width: 250px;"><%= response.question.question %></td>
                <td class="text-center"><%= response.attempts %></td>
                <td class="text-center"><%= response.points %></td>
            </tr>
        <% }) %>
        </tbody>
    <% } else { %>
        <tbody>
            <tr><td colspan="4">No responses have been given yet.</td></tr>
        </tbody>
    <% } %>
</table>

<%- include ./body-js -%>
<%- include ./footer -%>