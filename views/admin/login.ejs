<%- include ./header -%>

<form action="/admin/login" method="post" class="form-horizontal" style="margin: 0 auto; max-width: 330px;">
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" value="admin" class="form-control">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" value="admin" class="form-control">
    </div>
    <div class="form-group" style="margin-top: 30px">
        <button type="submit" class="btn btn-default btn-block">Log in</button>
    </div>
</form>

<%- include ./footer -%>