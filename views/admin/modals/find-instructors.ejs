<!-- find instructors modal -->
<div class="modal fade" id="modal-find-users" tabindex="-1" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span class="glyphicon glyphicon-search"></span> Find instructors</h4>
            </div>
            <div class="modal-body">
                <form action="/admin/courses/<%= course.id %>/instructors/search">
                    <input type="text" name="q" value="" class="form-control input-sm"
                        placeholder="Name, email, or leave blank">
                    <input type="submit" value="Search" class="btn btn-default btn-sm">
                </form>
                <div></div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>