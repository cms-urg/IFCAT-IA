<a href="#" class="counter" id="link-counter" data-toggle="modal" data-target="#modal-show-links"><%= 
    question.links.length !== 1 ? question.links.length + ' links added' : '1 link added' %></a>

<!-- add links modal -->
<div class="modal fade" id="modal-show-links" tabindex="-1" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Enter the URLs you want to add.</h4>
            </div>
            <div class="modal-body">
                <% if (!_.isEmpty(question.links)) { %>
                    <% _.each(question.links, function (link) { %>    
                        <div class="form-group">
                            <input type="text" name="links[]" value="<%= link %>" class="form-control" placeholder="http://www.example.com">
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="form-group">
                        <input type="text" name="links[]" value="" class="form-control" placeholder="http://www.example.com">
                    </div>
                <% } %>
                <button type="button" class="btn btn-default btn-sm" id="btn-add-link">
                    <span class="glyphicon glyphicon-plus"></span> Add another link
                </button>
            </div>
            <div class="modal-footer"> 
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>