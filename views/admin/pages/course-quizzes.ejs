<% include ../partials/header %>

<ol class="breadcrumb">
    <li><a href="<%= config.baseDir %>/admin/courses">Courses</a> ‚Äê <%= course.getCode() %></li>
    <li class="active">Quizzes</li>
</ol>

<h3><%- title %></h3>

<% include ../partials/flash %>

<form method="post">
    <div class="nav-actions">
        <a href="<%= config.baseDir %>/admin/courses/<%= course.getId() %>/quizzes/new" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-plus"></span> Add New Quiz
        </a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="name">Name</th>
                <th class="text-center"># of questions</th>
                <th class="createdAt">Date Created</th>
                <th class="actions"></th>
            </tr>
        </thead>
        <tbody>
        <% if (_.isEmpty(course.quizzes)) { %>
            <tr><td colspan="4">No quizzes have been added yet.</td></tr>
        <% } else { %>
            <% _.each(course.quizzes, quiz => { %>
                <tr>
                    <td class="name"><%= quiz.name %></td>
                    <td class="text-center"><%= quiz.questions.length %></td>
                    <td class="createdAt"><%= moment(quiz.createdAt).format(DATEFORMAT) %></td>
                    <td class="actions">
                        <div class="dropdown">
                            <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                Actions <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="<%= config.baseDir %>/admin/courses/<%= course.getId() %>/quizzes/<%= quiz._id %>/edit"><span class="glyphicon glyphicon-pencil"></span> Edit Quiz</a></li>
                                <li><a href="<%= config.baseDir %>/admin/courses/<%= course.getId() %>/quizzes/<%= quiz._id %>/copy" class="btn-copy"><span class="glyphicon glyphicon-duplicate"></span> Copy Quiz</a></li>
                                <li><a href="<%= config.baseDir %>/admin/courses/<%= course.getId() %>/quizzes/<%= quiz._id %>/questions"><span class="glyphicon glyphicon-question-sign"></span> Manage Questions</a></li>
                                <li class="divider"></li>
                                <li><a href="<%= config.baseDir %>/admin/courses/<%= course.getId() %>/quizzes/<%= quiz._id %>?_method=delete" class="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete Quiz</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>
</form>

<% include ../partials/footer %>