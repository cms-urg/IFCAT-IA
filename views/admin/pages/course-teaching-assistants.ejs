<% include ../partials/header %>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‐ <%= course.code %></li>
    <li class="active">Teaching Assistants</li>
</ol>

<h1><%- title %></h1>

<% include ../partials/flash %>

<div class="nav-actions">
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-find-users"><span class="glyphicon glyphicon-search"></span> Find teaching assistants</button>
    <a href="/admin/courses/<%= course.id %>/teaching-assistants" class="btn btn-primary btn-sm" id="btn-update"><span class="glyphicon glyphicon-ok"></span> Update tutorials</a>
    <a href="/admin/courses/<%= course.id %>/teaching-assistants" class="btn btn-danger btn-sm" id="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete teaching assistants</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 10px;"><input type="checkbox" value="1"></th>
            <th>Name</th>
            <th>Email</th>
            <th>Tutorials</th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(course.teachingAssistants)) { %>
        <tr><td colspan="4">No teaching assistants have been added to the course yet.</td></tr>
    <% } else { %>
        <% _.each(course.teachingAssistants, assistant => { %>
            <tr>
                <td><input type="checkbox" name="teachingAssistants[]" value="<%= assistant._id %>"></td>
                <td><%= assistant.name.full %></td>
                <td><%= assistant.local.email %></td>
                <td>
                <% _.each(course.tutorials, tutorial => { %>
                    <input type="checkbox" name="tutorials[<%= tutorial._id %>][]" value="<%= assistant._id %>" data-label="<%= tutorial.number %>"<%= tutorial.hasTeachingAssistant(assistant._id) ? ' checked' : '' %>>
                <% }) %>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<% include ../partials/modal-find-teaching-assistants %>
<% include ../partials/footer %>