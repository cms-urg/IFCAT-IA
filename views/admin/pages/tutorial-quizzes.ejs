<% include ../partials/header %>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‐ <%= course.code %></li>
    <% if (tutorial) { %>
        <li><a href="/admin/courses/<%= course.id %>/tutorials">Tutorials</a> ‐ TUT <%= tutorial.number %></li>
    <% } %>
    <li class="active">Tutorials &amp; Quizzes</li>
</ol>

<h3><%- title %></h3>

<% include ../partials/flash %>

<div class="nav-actions">
    <div class="btn-group">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown"> Bulk Actions<span class="caret"></span></button>
        <ul class="dropdown-menu">
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Publish</a></li>
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Unpublish</a></li>
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Activate</a></li>
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Deactivate</a></li>
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Archive</a></li>
            <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes">Unarchive</a></li>
            <li><a href="#!" onclick="form.submit()" id="btn-export">Export Marks</a></li>
        </ul>
    </div>
</div>

<form action="/admin/courses/<%= course._id %>/marks?export=true" method="post" id="form">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 10px;"><input type="checkbox"></th>
                <th>Quiz</th>
                <th>Tutorial</th>
                <th class="text-center">Published</th>
                <th class="text-center">Active</th>
                <th class="text-center">Archived</th>
                <th class="actions"></th>
            </tr>
        </thead>
        <tfoot>
            <tr><td colspan="7" class="clearfix"><% include ../partials/pagination %></td></tr>
        </tfoot>
        <tbody>
        <% if (_.isEmpty(tutorialQuizzes)) { %>
            <tr><td colspan="7">No quizzes have been added for this tutorial yet.</td></tr>
        <% } else { %>
            <% _.each(tutorialQuizzes, tutorialQuiz => { %>
                <tr>
                    <td><input type="checkbox" name="tutorialQuizzes[]" value="<%= tutorialQuiz._id %>"></td>
                    <td><%= tutorialQuiz.quiz.name %></td>
                    <td><%= 'TUT ' + tutorialQuiz.tutorial.number %></td>
                    <td class="text-center"><% if (tutorialQuiz.published) { %><span class="glyphicon glyphicon-ok"></span><% } %></td>
                    <td class="text-center"><% if (tutorialQuiz.active) { %><span class="glyphicon glyphicon-ok"></span><% } %></td>
                    <td class="text-center"><% if (tutorialQuiz.archived) { %><span class="glyphicon glyphicon-ok"></span><% } %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">Actions<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes/<%= tutorialQuiz._id %>"><span class="glyphicon glyphicon-play-circle"></span> Conduct quiz</a></li>
                                <li><a href="/admin/courses/<%= course._id %>/tutorials-quizzes/<%= tutorialQuiz._id %>/marks"><span class="glyphicon glyphicon-signal"></span> View Results</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>
</form>

<% include ../partials/footer %>