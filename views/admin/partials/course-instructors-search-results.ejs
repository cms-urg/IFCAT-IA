<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center" style="width: 50px"><input type="checkbox" value="1"></th>
            <th>Name</th>
            <th style="width: 50%">Email</th>
        </tr>
    </thead>
    <tfoot>
        <tr><td colspan="3" class="clearfix"><% include pagination %></td></tr>
    </tfoot>
    <tbody>
    <% if (_.isEmpty(instructors)) { %>
        <tr><td colspan="3">No instructors were found matching the given query.</td></tr>
    <% } else { %>
        <% _.each(instructors, instructor => { %>
            <tr>
                <td class="text-center"><input type="checkbox" name="users[]" value="<%= instructor._id %>"<%= course.hasInstructor(instructor._id) ? ' checked disabled' : '' %>></td>
                <td><%= instructor.name.full %></td>
                <td><%= instructor.local.email %></td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>