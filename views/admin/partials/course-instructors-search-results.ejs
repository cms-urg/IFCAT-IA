<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center" style="width: 50px"><input type="checkbox" value="1"></th>
            <th>Name</th>
            <th style="width: 50%">Email</th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(instructors)) { %>
        <tr>
            <td colspan="3">No instructors were found matching the given query.</td>
        </tr>
    <% } else { %>
        <% _.each(instructors, function (instructor) { %>
            <tr>
                <td class="text-center"><input type="checkbox" name="instructors[]" value="<%= 
                    instructor.id %>"<%= course.hasInstructor(instructor.id) ? ' checked disabled' : '' %>></td>
                <td><%= instructor.name.full %></td>
                <td><%= instructor.local.email %></td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>