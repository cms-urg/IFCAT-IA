<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center" style="width: 50px"><input type="checkbox" value="1"></th>
            <th>Name</th>
            <th>UTORid</th>
            <th>Student Number</th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(students)) { %>
        <tr>
            <td colspan="4">No students were found matching the given query.</td>
        </tr>
    <% } else { %> 
        <% _.each(students, function (student) { %>
            <tr>
                <td class="text-center"><input type="checkbox" name="students[]" value="<%= 
                    student.id %>"<%= course.hasStudent(student.id) ? ' checked disabled' : '' %>></td>
                <td><%= student.name.full %></td>
                <td><%= student.student.UTORid %></td>
                <td><%= student.student.number %></td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>