<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title><%= typeof title !== 'undefined' ? `${title} | ` : '' %>IFCAT Admin</title>
        <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://bootswatch.com/yeti/bootstrap.css">

        <link href="/bootstrap-switch/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet">
        <link href="/js/lib/jquery-ui/1.12.0/jquery-ui.min.css" rel="stylesheet">
        <link href="/js/lib/jquery-ui/1.12.0/jquery-ui.structure.min.css" rel="stylesheet">
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <link href="/css/admin.css" rel="stylesheet">
        <% if (typeof mathjax !== 'undefined') { %>
            <script type="text/x-mathjax-config">MathJax.Hub.Config({ tex2jax: {inlineMath: [["$","$"],["\\(","\\)"]]} })</script>
            <script type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=TeX-MML-AM_CHTML"></script>
        <% } %>
    </head>
    <body<%- typeof bodyClass !== 'undefined' ? ` class="${bodyClass}"` : '' %>>
        <nav class="navbar navbar-inverse">
            <div class="navbar-header">
                <% if (typeof user !== 'undefined') { %>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse" id="hamburger">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                <% } %>
                <a class="navbar-brand" href="/admin/courses">IFCAT Admin</a>  
            </div>
        <% if (typeof user !== 'undefined') { %>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Hi, <%= user.name.first %></a></li>
                    <li><a href="/admin/courses">Courses</a></li>
                    <li><a href="/admin/hub">Hub</a></li>
                    <% if (user.hasRole('admin')) { %>
                        <li><a href="/admin/users">Users</a></li>
                    <% } %>
                    <li><a href="/admin/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>
        <% } %>
        </nav>
        <main class="container">