
<div class="modal fade" id="modal-show-links" tabindex="-1" style="display: none">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add links</h4>
            </div>
            <div class="modal-body">
            <% if (_.isEmpty(question.links)) { %>
                <div class="form-group">
                    <div class="col-xs-8"> 
                        <input type="text" name="links[]" value="" class="form-control" placeholder="http://www.example.com" disabled>
                    </div>
                    <div class="col-xs-2">
                        <span class="glyphicon glyphicon-remove"></span>
                    </div> 
                </div> 
            <% } else { %>
                <% _.each(question.links, link => { %>
                    <div class="form-group">
                        <div class="col-xs-8"> 
                            <input type="text" name="links[]" value="<%= link %>" class="form-control" placeholder="http://www.example.com" disabled>
                        </div>
                        <div class="col-xs-2">
                            <span class="glyphicon glyphicon-remove"></span>
                        </div>
                    </div>
                <% }) %>
            <% } %>
                <div class="form-group">
                    <div class="col-xs-8"> 
                        <button type="button" class="btn btn-default btn-sm" id="btn-add-link"><span class="glyphicon glyphicon-plus"></span> Add another link</button>
                    </div>
                </div>
                <div class="form-group" style="display: none">
                    <div class="col-xs-8"> 
                        <input type="text" name="links[]" value="" class="form-control" placeholder="http://www.example.com" disabled>
                    </div>
                    <div class="col-xs-2">
                        <span class="glyphicon glyphicon-remove"></span>
                    </div> 
                </div>
            </div>
            <div class="modal-footer"> 
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>