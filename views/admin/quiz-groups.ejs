<%- include ../partials/admin-header -%>

<h1>Groups</h1>


<h4 class="todo">@TODO: ability to delete groups</h4>

<a href="#" class="btn btn-default btn-sm" 
    data-url="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.id %>/groups/generate">Generate groups</a>

<a href="#" class="btn btn-default btn-sm" 
    data-url="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.id %>/groups/generate">Save</a>

<% tutorialQuiz.groups.forEach(function (group, i) { %>
    <div class="panel panel-default" style="max-width: 600px">
        <div class="panel-heading" style="font-weight: bold">Group <%= group.name %></div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th style="width: 40%">First</th>
                    <th style="width: 40%">Last</th>
                </tr>
            </thead>
            <tbody class="sortable">
            <% group.members.forEach(function (member) { %>
                <tr>
                    <td></td>
                    <td><%= member.name.first %></td>
                    <td><%= member.name.last %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
<% }) %>

<%- include ../partials/admin-footer -%>