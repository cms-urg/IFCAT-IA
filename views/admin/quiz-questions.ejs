<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br><small>Quiz <%= quiz.name %> - Questions</small></h1>

<%- include ./flash %>

<div class="nav-actions">
    <a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions/new"
        class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Add New Question</a>
</div>

<table class="table table-striped dim">
    <thead>
        <tr>
            <th style="width: 10px;"></th>
            <th style="width: 10px;">No.</th>
            <th style="width: 150px;">Type</th>
            <th style="width: 300px;">Question</th>
            <th></th>
        </tr>
    </thead>
    <% if (_.isEmpty(quiz.questions)) { %>
        <tbody>
            <tr><td colspan="5">No questions have been added yet.</td></tr> 
        </tbody>
    <% } else { %>
        <tbody class="sortable">
        <% _.each(quiz.questions, function (question, i) { %>
            <tr>
                <td style="width: 10px;">
                    <span class="glyphicon glyphicon-option-vertical"></span>
                    <input type="hidden" name="questions[]" value="<%= question.id %>">
                </td>
                <td style="width: 10px;"><%= question.number %>.</td>
                <td style="width: 150px;"><%= question.type %></td>
                <td style="width: 300px;"><%= question.question %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <!--li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions/<%= question.id %>/view">View Question</a></li-->
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions/<%= question.id %>/edit"><span class="glyphicon glyphicon-pencil"></span> Edit Question</a></li>
                            <li class="divider"></li>
                            <li><a href="/admin/courses/<%= course.id %>/quizzes/<%= quiz.id %>/questions/<%= question.id %>" class="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete Question</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
        </tbody>
    <% } %>
</table>

<%- include ./body-js -%>

<script>
$(function () {
    $('.btn-delete').click(function (e) {
        e.preventDefault();
        var btn = this;
        $.deletebox({
            title: 'Delete question',
            message: '<p>You are about to delete question and all of its associated information.</p>\
                <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>',
            callback: function () {
                $.ajax(btn.href, {
                    type: 'delete',
                    complete: function () {
                        window.location.reload(true);
                    }
                });
            }
        });
    });

    $('.sortable').sortable({ 
        axis: 'y', 
        cancel: false,
        update: function (e, ui) {
            var $dim = $(e.target).closest('.dim').addClass('on');
            $.bootstrapAlert('close');
            $.ajax(window.location.href + '/sort', {
                type: 'put',
                data: $(':hidden').serialize(),
                success: function (res) {
                    $.bootstrapAlert('success', res).insertAfter($('.container > h1'));
                },
                error: function (xhr) {
                    $.bootstrapAlert('danger', xhr.responseText).insertAfter($('.container > h1'));
                },
                complete: function () {
                    setTimeout(function() { 
                        $dim.removeClass('on');
                    }, 1500);
                }
            });
        }
    });
});
</script>

<%- include ./footer -%>