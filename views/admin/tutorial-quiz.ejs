<%- include ../partials/admin-header -%>

<h1><%= tutorialQuiz.isNew ? 'Add new quiz' : 'Edit quiz' %></h1>

<form action="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.isNew ? '' : 
    tutorialQuiz.id + '?_method=put' %>" method="post" class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Quiz</label>
        <div class="col-sm-10">
            <select name="quiz" class="form-control">
            <% course.quizzes.forEach(function (quiz) { %>
                <option value="<%= quiz.id %>"<%= tutorialQuiz.quiz !== undefined &&
                    tutorialQuiz.quiz.id === quiz.id ? ' selected' : '' %>><%= quiz.name %></option>
            <% }) %>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Publish?</label>
        <div class="col-sm-10">
            <label class="radio-inline">
                <input type="radio" name="published" value="0"<%= tutorialQuiz.published ? '' : ' checked' %>>No
            </label>
            <label class="radio-inline">
                <input type="radio" name="published" value="1"<%= tutorialQuiz.published ? ' checked' : '' %>>Yes
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Active?</label>
        <div class="col-sm-10">
            <label class="radio-inline">
                <input type="radio" name="active" value="0"<%= tutorialQuiz.active ? '' : ' checked' %>>No
            </label>
            <label class="radio-inline">
                <input type="radio" name="active" value="1"<%= tutorialQuiz.active ? ' checked' : '' %>>Yes
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<%- include ../partials/admin-footer -%>