<%- include ./header -%>

<ol class="breadcrumb">
    <li><a href="/admin/courses">Courses</a> ‐ <%= course.code %></li>
    <li><a href="/admin/courses/<%= course.id %>/tutorials">Tutorials</a> ‐ TUT <%= tutorial.number %></li>
    <li class="active">Quizzes</li>
</ol>

<h1><%- title %></h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-center">Published</th>
            <th class="text-center">Active</th>
            <th class="text-center">Archived</th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(tutorialQuizzes)) { %>
        <tr>
            <td colspan="5">No quizzes have been added for this tutorial yet.</td>
        </tr>
    <% } else { %>
        <% _.each(tutorialQuizzes, function (tutorialQuiz) { %>
            <tr>
                <td><%= tutorialQuiz.quiz.name %></td>
                <td class="text-center">
                <% if (tutorialQuiz.published) { %>
                    <span class="glyphicon glyphicon-ok"></span>
                <% } %>
                </td>
                <td class="text-center">
                <% if (tutorialQuiz.active) { %>
                    <span class="glyphicon glyphicon-ok"></span>
                <% } %>
                </td>
                <td class="text-center">
                <% if (tutorialQuiz.archived) { %>
                    <span class="glyphicon glyphicon-ok"></span>
                <% } %>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.quiz.id %>/conduct"><span class="glyphicon glyphicon-play-circle"></span> Conduct quiz</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.quiz.id %>/groups"><span class="glyphicon glyphicon-signal"></span> View Results</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./body-js -%>
<%- include ./footer -%>