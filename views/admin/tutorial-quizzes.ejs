<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br>
<small>TUT <%= tutorial.number %> - Quizzes</small></h1>

<%- include ./messages %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% _.each(tutorialQuizzes, function (tutorialQuiz) { %>
        <tr>
            <td><%= tutorialQuiz.quiz.name %></td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        Actions<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/admin/courses/<%= course.id %>/tutorial-quizzes/<%= tutorialQuiz.id %>/edit">Edit quiz</a></li>
                        <li><a href="/admin/courses/<%= course.id %>/tutorial-quizzes/<%= tutorialQuiz.id %>/groups">Conduct quiz</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<%- include ./footer -%>