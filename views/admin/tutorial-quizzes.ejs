<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br>
<small>TUT <%= tutorial.number %> - Quizzes</small></h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
    <% if (_.isEmpty(tutorialQuizzes)) { %>
        <tr>
            <td colspan="2">No quizzes have been added for this tutorial yet. Click <a href="/admin/courses/<%= course.id %>/quizzes/">here</a> to add  quizzes</a> into the tutorial.</td>
        </tr>
    <% } else { %>
        <% _.each(tutorialQuizzes, function (tutorialQuiz) { %>
            <tr>
                <td><%= tutorialQuiz.quiz.name %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/tutorial-quizzes/<%= tutorialQuiz.id %>/edit"><span 
                                class="glyphicon glyphicon-pencil"></span> Edit quiz</a></li>
                            <li><a href="/admin/courses/<%= course.id %>/tutorial-quizzes/<%= tutorialQuiz.id %>/groups"><span class="glyphicon glyphicon-play-circle"></span> Conduct quiz</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./body-js -%>
<%- include ./footer -%>