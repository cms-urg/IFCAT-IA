<%- include ../partials/admin-header -%>

<h1>Tutorial Quizzes</h1>

<a class="btn btn-default btn-sm" href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/new">Add New Quiz</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th colspan="2">Status</th>
            <th># of groups</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% tutorialQuizzes.forEach(function (tutorialQuiz) { %>
        <tr>
            <td><%= tutorialQuiz.quiz.name %></td>
            <td><%= tutorialQuiz.published ? 'Published' : 'Unpublished' %></td>
            <td><%= tutorialQuiz.active ? 'Active' : 'Inactive' %></td>
            <td><%= tutorialQuiz.groups.length %></td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        Actions<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.id %>/edit">Edit quiz</a></li>
                        <li><a href="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.id %>/groups">Manage Groups</a></li>
                        <li class="divider"></li>
                        <li><a href="#"
                            data-delete="/admin/courses/<%= course.id %>/tutorials/<%= tutorial.id %>/quizzes/<%= tutorialQuiz.id %>">Delete Quiz</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<%- include ../partials/admin-footer -%>