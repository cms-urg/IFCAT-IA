<%- include ./header -%>

<h1><%= course.code + ' - ' + course.name %><br>
<small>TUT <%= tutorial.number %> - Students</small></h1>

<%- include ./messages %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>UTORid</th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="3"><%= tutorial.students.length + ' student' + (tutorial.students.length !== 1 ?  's' : '') %></th>
        </tr>
    </tfoot>
    <tbody>
    <% if (_.isEmpty(tutorial.students)) { %>
        <tr>
            <td colspan="3">No students have been added to this tutorial yet. Click <a href="/admin/courses/<%= course.id %>/students">here</a> to add students</a> into the tutorial.</td>
        </tr>
    <% } else { %>  
        <% _.each(tutorial.students, function (student, i) { %>
            <tr>
                <td><%= student.name.full %></td>
                <td><%= student.UTORid %></td>
                <th>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/courses/<%= course.id %>/students/<%= student.id %>/marks">View Marks</a></li>
                        </ul>
                    </div>
                </th>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>

<%- include ./body-js -%>
<%- include ./footer -%>