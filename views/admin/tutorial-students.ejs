<%- include ./header -%>

<h1>Students</h1>

<h4 class="todo">@TODO: ability to delete students</h4>

<form action="#" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" value="1"></th>
                <!--th>UTORid</th-->
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% tutorial.students.forEach(function (student) { %>
            <tr>
                <td><input type="checkbox" value="<%= student.id %>"></td>
                <!--td><%= student.UTORid %></td-->
                <td><%= student.name.first %></td>
                <td><%= student.name.last %></td>
                <td><%= student.local.email %></td>
                <th>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">View </a></li>
                        </ul>
                    </div>
                </th>
            </tr>
        <% }) %>
        </tbody>
    </table>
</form>

<%- include ./footer -%>