<%- include ../partials/admin-header -%>

<h1><%= user.isNew ? 'Add new user' : 'Edit user' %></h1>

<form action="/admin/users/<%= user.isNew ? '' : user.id + '?_method=put' %>" method="post" class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
            <div class="form-group">
                <div class="col-xs-4"> 
                    <input type="text" name="name[first]" value="<%= user.name.first %>" placeholder="First" class="form-control">
                </div>
                <div class="col-xs-4"> 
                    <input type="text" name="name[last]" value="<%= user.name.last %>" placeholder="Last" class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Roles</label>
        <div class="col-sm-8">
            <select name="roles" multiple class="form-control">
            <% [
                { text: 'Administrator', value: 'admin' },
                { text: 'Instructor', value: 'instructor' },
                { text: 'Teaching assistant', value: 'teachingAssistant' },
                { text: 'Student', value: 'student' }
            ].forEach(function (role) { %>

                
                <option value="<%= role.value %>"<%= user.roles.indexOf(role.value) !== -1 ? ' selected' : '' %>><%= role.text %></option>


            <% }) %>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
            <input type="text" name="local[email]" value="<%= user.local.email %>" class="form-control">   
        </div>
    </div>

    <!--div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-8">
            <input type="text" name="local[password]" value="" class="form-control">   
        </div>
    </div-->

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/users" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<%- include ../partials/admin-footer -%>