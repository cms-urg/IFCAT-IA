<%- include ./header -%>

<h1><%= us3r.isNew ? 'Add new user' : 'Edit user' %></h1>

<%- include ./flash %>

<form action="/admin/users/<%= us3r.isNew ? '' : us3r.id + '?_method=put' %>" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-2" style="margin-bottom: 15px;"> 
            <input type="text" name="name[first]" value="<%= us3r.name.first %>" placeholder="First" class="form-control">
        </div>
        <div class="col-sm-2"> 
            <input type="text" name="name[last]" value="<%= us3r.name.last %>" placeholder="Last" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Roles</label>
        <div class="col-sm-8">
            <select name="roles" multiple class="form-control">
                <option value="admin"<%= us3r.roles.indexOf('admin') !== -1 ? 
                    ' selected' : '' %>>Administrator</option>
                <option value="instructor"<%= us3r.roles.indexOf('instructor') !== -1 ? 
                    ' selected' : '' %>>Instructor</option>
                <option value="teachingAssistant"<%= us3r.roles.indexOf('teachingAssistant') !== -1 ? 
                    ' selected' : '' %>>Teaching assistant</option>
                <option value="student"<%= us3r.roles.indexOf('student') !== -1 ? 
                    ' selected' : '' %>>Student</option>
            </select>
        </div>
    </div>
    <div data-roles="admin|instructor|teachingAssistant" style="display: none">
        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-8">
                <input type="text" name="local[email]" value="<%= us3r.local.email %>" class="form-control" autocomplete="off">   
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-8">
                <input type="password" name="local[password]" value="" class="form-control" autocomplete="off">   
            </div>
        </div>
    </div>
    <div data-roles="student" style="display: none">
        <div class="form-group">
            <label class="col-sm-2 control-label">UTORid</label>
            <div class="col-sm-8">
                <input type="text" name="student[UTORid]" value="<%= us3r.student.UTORid %>" class="form-control">   
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Student Number</label>
            <div class="col-sm-8">
                <input type="text" name="student[number]" value="<%= us3r.student.number %>" class="form-control">   
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="/admin/users" class="btn btn-default btn-sm">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>

</form>

<%- include ./body-js -%>

<script>
$(function () {
    var $sections = $('[data-roles]');
    $('[name=roles]').change(function () {
        var roles = $(this).val() || [];
        // show or hide sections depending on which roles are picked
        $sections.each(function () {
            $(this).toggle(!!_.intersection($(this).data('roles').split('|'), roles).length); 
        });
    }).change();
});
</script>

<%- include ./footer -%>