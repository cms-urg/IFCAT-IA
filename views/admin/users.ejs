<%- include ./header -%>

<h1>Users</h1>

<%- include ./messages %>

<a href="/admin/users/new" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Add new user</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>UTORid</th>
            <th class="text-center">Admin</th>
            <th class="text-center">Instructor</th>
            <th class="text-center">TA</th>
            <th class="text-center">Student</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (!_.isEmpty(users)) { %>
        <% for (var i = 0, len = users.length; i < len; i++) { %>
            <tr>
                <td><%= users[i].name.full %></td>
                <td><%= users[i].local.email %></td>
                <td><%= users[i].UTORid %></td>
                <% ['admin', 'instructor', 'teachingAssistant', 'student'].forEach(function (role) { %>
                    <td class="text-center">
                    <% if (users[i].hasRole(role)) { %>
                        <span class="glyphicon glyphicon-ok"></span>
                    <% } %>
                    </td>
                <% }) %>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                            Actions<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/admin/users/<%= users[i].id %>/edit"><span class="glyphicon glyphicon-pencil"></span> Edit user</a></li>
                            <li class="divider">
                            <li><a href="/admin/users/<%= users[i].id %>" class="btn-delete"><span class="glyphicon glyphicon-remove"></span> Delete user</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% } %>
    <% } else { %>
        <tr><td colspan="8">No users have been added yet.</td></tr>
    <% } %>
    </tbody>
</table>

<script type="text/template" id="btn-delete-message-template">
    <p>You are about to delete user and all of its associated information.</p>
    <p>This action <b>cannot be undone</b>. Do you want to proceed with this action?</p>
</script>

<%- include ./footer -%>