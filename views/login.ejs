<%- include ./header -%>
<script src="https://cdn.auth0.com/js/lock/10.3/lock.min.js" type="text/javascript"></script>
<form action="/student/login" method="post" class="form-horizontal" style="margin: 0 auto; max-width: 330px">
    <h4 class="todo" style="color: red; text-align: center; margin-bottom: 30px">@TODO: REPLACE WITH AUTH0</h4>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" value="" class="form-control">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" value="" class="form-control">
    </div>
    <div class="form-group" style="margin-top: 30px">
        <button type="submit" class="btn btn-default btn-block">Log in</button>
    </div>
     <div id="root" style="width: 280px; margin: 40px auto; padding: 10px;"/>

</form>
<script>
    // Construct an instance of Auth0Lock with your clientId and aut0 domain name
    var lock = new Auth0Lock('<%=clientId%>', '<%=domain%>',{ auth: {
          redirectUrl: '<%=callbackUrl%>'
        , responseType: 'code'
        , params: {
          scope: 'openid profile'
        }
      }});

    // Show lock's login widget
    lock.show();
</script>
