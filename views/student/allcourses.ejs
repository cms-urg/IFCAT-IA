<%- include ../partials/header -%>

<h1>All Courses</h1> &nbsp; <a class="btn btn-default btn-sm" href="/courses/">View enrolled courses</a>
<hr/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% courses.forEach(function (course) { %>
        <tr>
            <th><%= course.code %></th>
            <th><%= course.name %></th>
            <th>
                <div class="dropdown">
                    <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        Actions<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/courses/<%= course.code %>/edit">View tutorials</a></li>
                        <!--<li><a href="/courses/<%= course.code %>/tutorials">Manage Tutorials</a></li>-->
                    </ul>
                </div>
            </th>
        </tr>
    <% }) %>
    </tbody>
</table>

<%- include ../partials/footer -%>