<%- include ./header -%>
<script type="text/x-mathjax-config">
  MathJax.Hub.Config({
    tex2jax: {inlineMath: [["$","$"],["\\(","\\)"]]}
  });
</script>
<script type="text/javascript" src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_HTML-full"></script>
<link rel = "stylesheet" href = "/css/quiz.css" type="text/css" />
<div class="center-block">

   
   <div class = "centerText col-xs-10 col-xs-offset-1">
       
    <div class = "preQuiz" id = "assignGroup">
        You are in group : <br/><h1 id = "groupName" class = "extraLarge">?</h1>
      <br/>
      <p>
      Please find the other members of your group. When your TA activates the quiz, you will be able to select a driver and collaborate on your questions.
      </p>
      <hr/>
    </div>
  
    <div class = "preQuiz" id = "driverSelect" style="display : none">
      This quiz requires a member of your group to serve as the driver, who will submit answers.
      <br/>
      <button class = "btn btn-primary col-md-4 col-sm-10 col-xs-12 col-md-offset-4 col-sm-offset-1" id = "selectDriverBtn" > I will be driver </button>
      <br/>
      <button class = "btn btn-danger col-md-4 col-sm-10 col-xs-12 col-md-offset-4 col-sm-offset-1" id = "deferDriverBtn" > I will not be the driver </button>
    </div>
    
  </div>
  
  <br/>
  
  <div class= "row" id = "activeQuiz" style="display: none">
      <div class = "col-md-2 col-md-offset-2 col-sm-12 col-xs-12">
        <span class = "bold">Group <span id="currentGroup"><br/></span> &nbsp; Score: <span class="bold" id="currentScore"></span></span>
        <hr/>
        <div id = "questionSelect"></div>
      </div>
      <br/>
      <div class = "col-md-6 col-md-offset-1 col-sm-12 col-xs-12"> 
        <br/>
        <h4 class="bold"><div id = "text"></div></h4>
        <span id = "questionScore"></span>&nbsp;
        <a id="attachmentCollapser" data-toggle="collapse" data-target="#attachment">Attachments</a>
        <br/>
        <div id = "attachment" class="collapse"></div>
        <br/>
        <div id = "choices"></div>
        <hr/>
        <button class = "btn btn-success quizBtn" disabled="true" id = "submitQuestion">Submit</button>
        <br/>
      </div>
  </div>
  
  <div class = "centerText" id = "postQuiz" style = "display: none">
    Your score:<br/><span class="extraLarge" id = "score"></span>
    <br />
    <hr/>
    If you wish, you can award a teaching point to the member of your group
    who contributed the most during this quiz:
    <br/>
    <div id = "teachingPointsPicker"></div>
    
    
  </div>

</div>

<script src="/socketioclient/socket.io.js"></script>
